{% extends 'base.twig' %}

{% block main_content %}
        {% if authors %} 
                    <h1 class="mt-4">{{authors.name}}</h1>
                         <small>Auteur van het Silex forum</small>
                             <p class="mt-4">Mail: <small><a href="mailto:{{ authors.email}}">{{ authors.email}}    </a></small><br>
                                  Website: <small><a href="{{ authors.website}}">{{ authors.website}}            </a></small></p>
                                 <p class="mt-3"><a class=" btn btn-primary" href="/list-post-author/{{authors.name}}">Mijn    berichten</a></p>
                                <hr>
                            <h3>Iets over mij zelf.</h3>
                        <p>{{authors.biografie}}</p>

        {% else %}
    <p>Deze auteur bestaat niet...</p>
    {% endif %}
    
    <a href="/" class="btn btn-info btn-small">Terug</a>  
    
    {% endblock %}
    