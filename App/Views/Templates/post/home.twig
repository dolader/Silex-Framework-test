{% extends 'base.twig' %}

    {% block main_content %}
    
    <h1>Welkom op het Silex Forum</h1>
      <div class="container">
         {% if posts or authors %}
           <h2 class="mt-4">De laatste berichten</h2>
             <table id="posts" class="table"> 
                <tbody>
                  {% for post in posts %}
                    <tr>
                      <td><h5>{{post.title}}</h5>
                        <p><small>Door: <a href="/author/{{post.authorName}}">{{post.authorName}}</a></small>
                          <a href="/list-post-author/{{post.authorName}}">
                            <span class="badge badge-info ml-3">{{post.getNumberOfPost}}
                             {% if post.getNumberOfPost > 1  %} berichten</span></a></p> {% else %} bericht</span></a></p>
                             {% endif %}
                            </p> 
                            <div class="card bg-secondary mb-3 p-3">
                              <p>{{post.excerpt}}</p>
                            </div>

                              </td>
                             <td><a href="/post/{{post.id}} " class="btn btn-success btn-mini btn-show">Lees meer</a></td>
                         </tr> 
                        
                     {% endfor %}
                 </tbody>
              </table>
       
             {% else %}
         <p>Er zijn geen berichten.</p>
        {% endif %}
     </div>
    {% endblock %}

   
